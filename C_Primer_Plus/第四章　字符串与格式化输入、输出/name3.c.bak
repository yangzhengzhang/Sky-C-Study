#include <stdio.h>
#include <string.h>

int main(void)
{
    char fname[40], lname[40];
    int flength, llength;

    printf("Please enter your name like: Sky Ao: ");
    scanf("%s %s", fname, lname);

    flength = strlen(fname);
    llength = strlen(lname);

    printf("%s %s\n", fname, lname);
    printf("%-*d %-*d", flength, flength, llength, llength);
    return 0;
}
